<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="icon_style">
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="login_edit_text">
        <item name="android:color">@color/white</item>
        <item name="android:textColorHint">@color/shape_gray</item>
        <item name="android:backgroundTint">@color/shape_gray</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">3dp</item>

        <item name="queryHint">@string/search_hint</item>

    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>